<odoo>
    <record id="ssi_hr_employee_category_view_tree" model="ir.ui.view">
        <field name="name">ssi_hr.employee_category Tree</field>
        <field name="model">ssi_hr.employee_category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="ssi_hr_employee_category_view_form" model="ir.ui.view">
        <field name="name">ssi_hr.employee_category Form</field>
        <field name="model">ssi_hr.employee_category</field>
        <field name="arch" type="xml">
            <form string="Employee Category">
                <header>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box" />
                    <group col="4">
                        <field name="name" />
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>

    <record id="ssi_hr_employee_category_action" model="ir.actions.act_window">
        <field name="name">Employee Category</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ssi_hr.employee_category</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to add a Employee Category.
            </p>
        </field>
    </record>
</odoo>
