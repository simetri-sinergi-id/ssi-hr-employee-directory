<odoo>
     <record id="ssi_hr_job_grade_category_view_tree" model="ir.ui.view">
         <field name="name">ssi_hr.job_grade_category Tree</field>
         <field name="model">ssi_hr.job_grade_category</field>
         <field name="arch" type="xml">
             <tree>
                 <field name="code" />
                 <field name="name" />
                 <field name="active" />
             </tree>
         </field>
     </record>

     <record id="ssi_hr_job_grade_category_view_form" model="ir.ui.view">
         <field name="name">ssi_hr.job_grade_category Form</field>
         <field name="model">ssi_hr.job_grade_category</field>
         <field name="arch" type="xml">
             <form string="Job Grade Category">
                 <header>
                 </header>
                 <sheet>
                     <div class="oe_button_box" name="button_box" />
                     <widget
                        name="web_ribbon"
                        title="Archived"
                        bg_color="bg-danger"
                        attrs="{'invisible': [('active', '=', True)]}"
                    />
                     <div class="oe_title">
                         <label for="name" class="oe_edit_only" />
                         <h1><field name="name" /></h1>
                     </div>
                     <group name="main" col="4">
                         <field name="code" />
                         <field
                            name="company_id"
                            options="{'no_create': True}"
                            groups="base.group_multi_company"
                        />
                         <field name="active" widget="boolean_toggle" />
                     </group>
                     <notebook colspan="4">
                         <page name="note" string="Note">
                             <field
                                name="note"
                                colspan="4"
                                nolabel="1"
                                placeholder="Add note here ..."
                            />
                         </page>
                         <page
                            name="page_job_grade_category"
                            string="Job Grade Category"
                        >
                             <field name="job_grade_category_ids" />
                         </page>
                     </notebook>
                 </sheet>
                 <div class="oe_chatter">
                     <field name="message_follower_ids" groups="base.group_user" />
                     <field name="message_ids" />
                 </div>
             </form>
         </field>
     </record>

     <record id="ssi_hr_job_grade_category_action" model="ir.actions.act_window">
         <field name="name">Job Grade Category</field>
         <field name="type">ir.actions.act_window</field>
         <field name="res_model">ssi_hr.job_grade_category</field>
         <field name="view_mode">tree,form</field>
         <field name="help" type="html">
           <p class="oe_view_nocontent_create">
             Click to add a Job Grade.
           </p>
         </field>
     </record>
     <menuitem
        id="ssi_menu_view_hr_job_grade_category"
        name="Job Grade Category"
        action="ssi_hr_job_grade_category_action"
        parent="ssi_menu_hr_configuration_hr_job_family"
        sequence="1"
    />

 </odoo>
