<odoo>
     <record id="ssi_hr_employee_view_tree" model="ir.ui.view">
         <field name="name">ssi_hr.employee Tree</field>
         <field name="model">ssi_hr.employee</field>
         <field name="arch" type="xml">
             <tree string="Employees" multi_edit="1" sample="1">
                 <field name="name" readonly="1" />
                 <field name="work_phone" class="o_force_ltr" readonly="1" />
                 <field name="work_email" />
                 <field
                    name="company_id"
                    groups="base.group_multi_company"
                    readonly="1"
                />
                 <field name="department_id" />
                 <field name="job_position_id" />
                 <field name="parent_id" />
                 <field name="work_location" optional="hide" />
                 <field name="coach_id" invisible="1" />
             </tree>
         </field>
     </record>

     <record id="ssi_hr_employee_view_form" model="ir.ui.view">
         <field name="name">ssi_hr.employee Form</field>
         <field name="model">ssi_hr.employee</field>
         <field name="arch" type="xml">
             <form string="Employee">
                 <header>
                 </header>
                 <sheet>
                     <div class="oe_button_box" name="button_box" />
                     <!--
                     <widget
                        name="web_ribbon"
                        title="Archived"
                        bg_color="bg-danger"
                        attrs="{'invisible': [('active', '=', True)]}"
                     />
                    -->
                     <div class="oe_title">
                         <h1 class="d-flex">
                             <field
                                name="name"
                                placeholder="Employee's Name"
                                required="True"
                            />
                         </h1>
                         <h2>
                             <field name="job_title" placeholder="Job Position" />
                         </h2>
                         <field
                            name="category_ids"
                            widget="many2many_tags"
                            options="{'color_field': 'color', 'no_create_edit': True}"
                            placeholder="Tags"
                        />
                     </div>
                     <group name="main">
                         <group name="main_1">
                             <field name="mobile_phone" widget="phone" />
                             <field name="work_phone" widget="phone" />
                             <field name="work_email" widget="email" />
                             <field
                                name="company_id"
                                groups="base.group_multi_company"
                            />
                         </group>
                         <group name="main_2">
                             <field name="department_id" />
                             <field name="parent_id" />
                             <field name="coach_id" />
                         </group>
                     </group>
                     <notebook>
                         <page name="public" string="Work Information">
                             <div
                                id="o_work_employee_container"
                            > <!-- These two div are used to position org_chart -->
                                 <div id="o_work_employee_main">
                                     <group name="location" string="Location" col="4">
                                         <field
                                            name="address_id"
                                            context="{'show_address': 1}"
                                            options='{"always_reload": True, "highlight_first_line": True}'
                                        />
                                         <field name="work_location" />
                                     </group>
                                     <!--
                                     <group name="departure" string="Departure" attrs="{'invisible': [('active', '=', True)]}">
                                     -->
                                     <!-- if employee status not hired show this -->
                                     <group name="departure" string="Departure" col="4">
                                         <field name="employee_status_id" />
                                         <field name="departure_date" />
                                         <field
                                            name="departure_description"
                                            label="Note"
                                        />
                                     </group>
                                     <group name="schedule" string="Schedule" col="4">
                                         <field
                                            name="resource_calendar_id"
                                            required="1"
                                        />
                                         <field name="tz" />
                                     </group>
                                 </div>
                             </div>
                         </page>
                         <page name="career_info" string="Career Information">
                             <group
                                name="date_info"
                                string="Date Career Information"
                                col="4"
                            >
                                 <field name="first_join_date" />
                                 <field name="employed_date" />
                                 <field name="start_contract_date" />
                                 <field name="end_contract_date" />
                                 <field name="evaluation_date" />
                                 <field name="permanent_date" />
                             </group>
                             <group name="job_info" string="Job Information" col="4">
                                 <field name="employment_status_id" />
                                 <field name="employee_status_id" />
                                 <field name="job_position_id" />
                                 <field name="job_grade_id" />
                             </group>
                         </page>
                     </notebook>
                 </sheet>
                 <div class="oe_chatter">
                     <field name="message_follower_ids" groups="base.group_user" />
                     <field name="message_ids" />
                 </div>
             </form>
         </field>
     </record>

     <record id="ssi_hr_employee_action" model="ir.actions.act_window">
         <field name="name">Employee</field>
         <field name="type">ir.actions.act_window</field>
         <field name="res_model">ssi_hr.employee</field>
         <field name="view_mode">tree,form</field>
         <field name="help" type="html">
           <p class="oe_view_nocontent_create">
             Click to add an Employee.
           </p>
         </field>
     </record>

     <menuitem
        id="ssi_menu_view_employee"
        name="Employee"
        action="ssi_hr_employee_action"
        parent="ssi_menu_hr_main"
        sequence="1"
    />

 </odoo>
