<odoo>
    <record id="ssi_hr_employment_status_view_tree" model="ir.ui.view">
        <field name="name">ssi_hr.employment_status Tree</field>
        <field name="model">ssi_hr.employment_status</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="is_employee" />
                <field name="is_permanent" />
            </tree>
        </field>
    </record>

    <record id="ssi_hr_employment_status_view_form" model="ir.ui.view">
        <field name="name">ssi_hr.employment_status Form</field>
        <field name="model">ssi_hr.employment_status</field>
        <field name="arch" type="xml">
            <form string="Employment Status">
                <header>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box" />
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1><field name="name" /></h1>
                    </div>
                    <group name="main" col="4">
                        <field name="active" widget="boolean_toggle" />
                        <field name="is_employee" widget="boolean_toggle" />
                        <field name="is_permanent" widget="boolean_toggle" />
                        <field
                            name="company_id"
                            options="{'no_create': True}"
                            groups="base.group_multi_company"
                        />
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>

    <record id="ssi_hr_employment_status_action" model="ir.actions.act_window">
        <field name="name">Employment Status</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ssi_hr.employment_status</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to add an Employment Status.
            </p>
        </field>
    </record>
    <menuitem
        id="ssi_menu_view_employment_status_form"
        name="Employment Status"
        action="ssi_hr_employment_status_action"
        parent="ssi_menu_human_resources_configuration_employee"
        sequence="3"
    />

</odoo>
