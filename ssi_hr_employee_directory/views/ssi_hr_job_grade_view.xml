<odoo>
     <record id="ssi_hr_job_grade_view_tree" model="ir.ui.view">
         <field name="name">ssi_hr.job_grade Tree</field>
         <field name="model">ssi_hr.job_grade</field>
         <field name="arch" type="xml">
             <tree>
                 <field name="code" />
                 <field name="name" />
                 <field name="active" />
             </tree>
         </field>
     </record>

     <record id="ssi_hr_job_grade_view_form" model="ir.ui.view">
         <field name="name">ssi_hr.job_grade Form</field>
         <field name="model">ssi_hr.job_grade</field>
         <field name="arch" type="xml">
             <form string="Job Grade">
                 <header>
                 </header>
                 <sheet>
                     <div class="oe_button_box" name="button_box" />
                     <widget
                        name="web_ribbon"
                        title="Archived"
                        bg_color="bg-danger"
                        attrs="{'invisible': [('active', '=', True)]}"
                    />
                     <field name="active" invisible="1" />
                     <group col="4">
                         <field name="code" />
                         <field name="name" />
                         <field name="job_grade_category_id" />
                         <field name="sequence" />
                         <field name="active" widget="boolean_toggle" />
                         <field
                            name="company_id"
                            options="{'no_create': True}"
                            groups="base.group_multi_company"
                        />
                     </group>
                     <notebook colspan="4">
                         <page name="note" string="Note">
                             <field
                                name="note"
                                colspan="4"
                                nolabel="1"
                                placeholder="Add note here ..."
                            />
                         </page>
                     </notebook>
                 </sheet>
                 <div class="oe_chatter">
                     <field name="message_follower_ids" groups="base.group_user" />
                     <field name="message_ids" />
                 </div>
             </form>
         </field>
     </record>

     <record id="ssi_hr_job_grade_action" model="ir.actions.act_window">
         <field name="name">Job Grade</field>
         <field name="type">ir.actions.act_window</field>
         <field name="res_model">ssi_hr.job_grade</field>
         <field name="view_mode">tree,form</field>
         <field name="help" type="html">
           <p class="oe_view_nocontent_create">
             Click to add a Job Grade.
           </p>
         </field>
     </record>
 </odoo>
